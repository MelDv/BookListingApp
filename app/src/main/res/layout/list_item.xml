<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin">


    <TextView
        android:id="@+id/list_authors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/readme"
        android:paddingBottom="@dimen/min_padding"
        android:textSize="@dimen/author"
        android:textStyle="italic"
        tools:text="Johan Ludvig Runeberg" />

    <TextView
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_authors"
        android:layout_toLeftOf="@+id/readme"
        android:textColor="@color/secondary_text"
        android:textStyle="bold"
        tools:text="VÃ¤nrikki Stoolin tarinat" />

    <TextView
        android:id="@+id/readme"
        android:layout_width="@dimen/shape_widht"
        android:layout_height="@dimen/shape_height"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/margin"
        android:background="@drawable/readme_oval"
        android:gravity="center"
        android:text="@string/read_me"
        android:textColor="@color/icons"
        android:textStyle="bold" />

</RelativeLayout>
